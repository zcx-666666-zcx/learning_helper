<view class="UP">
  <text id="UPt1">AI聊天</text>
</view>

<view class="line1"></view>

<!-- 聊天窗口 -->
<scroll-view scroll-y="true" class="chat-window">
  <view wx:for="{{chatRecords}}" wx:key="timestamp" class="message-item {{item.isUser ? 'user-message' : 'ai-message'}}">
    <text>{{item.content}}</text>
  </view>
  <view wx:if="{{isLoading}}" class="loading">
    <text>AI正在思考中...</text>
  </view>
</scroll-view>

<!-- 输入框与发送按钮 -->
<view class="input-group">
  <input type="text" placeholder="请输入问题" bindinput="bindInput" value="{{inputValue}}" bindconfirm="sendQuestion" />
  <button bindtap="sendQuestion" disabled="{{isLoading}}">发送</button>
</view>

<view class="line2">
</view>
  <!-- 返回按钮和标题 -->
  <view class="back">
    <navigator url="/pages/index/index">返回</navigator>
  </view>