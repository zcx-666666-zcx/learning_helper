/**index.wxss**/
#UP{
  width: 750rpx;
  height: 200rpx;
  background-color: rgb(106, 151, 103);
  text-align: center;
  line-height: 300rpx;
  font-size: 35rpx;
}

#hello{
  margin: 30rpx 40rpx;
  width: 440rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  padding: 0 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  border-left: 8rpx solid #6a9767;
}

.menu1{
  margin: 30rpx 0rpx;
  width: 750rpx;
  height: 630rpx;
  text-align: center;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
}

#start_learn{
  margin: 0rpx;
  width: 500rpx;
  height: 500rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
  overflow: hidden;
  transition: all 0.3s ease;
  border: 4rpx solid #e9ecef;
}

#start_learn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2);
}

#info{
  margin: 0rpx 0 40rpx 50rpx;
  width: 650rpx;
  height: 80rpx;
  border: 4rpx solid #6a9767;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #6a9767;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  box-shadow: 0 4rpx 16rpx rgba(106, 151, 103, 0.2);
  transition: all 0.3s ease;
}

#info:active {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(106, 151, 103, 0.3);
}

#TIME{
  margin: 40rpx 50rpx;
  width: 650rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 25rpx;
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.3);
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.learn_time{
  margin: 0rpx 20rpx;
  width: 200rpx;
  height: 400rpx;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 30rpx;  
  background: linear-gradient(145deg, #d1a46e 0%, #e6b983 100%);
  border: 6rpx solid #613003;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 
    0 6rpx 20rpx rgba(97, 48, 3, 0.25),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.4);
  color: #3a2401;
  padding: 20rpx;
  text-align: center;
  line-height: 1.5;
}

.learn_time text {
  margin: 15rpx 0;
  padding: 20rpx 10rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  width: 180rpx;
  backdrop-filter: blur(10rpx);
}

.menu2{
  margin: 30rpx 0rpx;
  width: 750rpx;
  height: 140rpx;
  text-align: center;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: linear-gradient(135deg, #fcf3ea 0%, #f8f0e6 100%);
  border-radius: 25rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  padding: 0 20rpx;
}

#sentences{
  margin: 10rpx;
  width: 500rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #495057;
  background: white;
  border-radius: 20rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  line-height: 1.4;
  border-left: 6rpx solid #6a9767;
}

#upload{
  margin: 15rpx;
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  overflow: hidden;
  transition: all 0.3s ease;
  border: 3rpx solid #e9ecef;
}

#upload:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.15);
}

.line1{
  width: 750rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent 0%, #6a9767 50%, transparent 100%);
  margin: 20rpx 0;
}

.line2{
  width: 750rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #888 50%, transparent 100%);
  margin: 20rpx 0;
}

.table{
  margin: 5rpx 0rpx;
  width: 750rpx;
  height: 80rpx;
  text-align: center;
  display: flex;
  justify-content: space-around;
  font-size: 33rpx;
  line-height: 80rpx;
}

#index{
  margin: 5rpx 200rpx 5rpx 50rpx;
  width: 100rpx;
  height: 70rpx;
  font-weight: 1000;
}

#user{
  margin: 5rpx 50rpx 5rpx 200rpx;
  width: 140rpx;
  height: 70rpx;
}

#up_img{
  width: 100%;
  height: 100rpx;
  border-radius: 22rpx;
}

#start{
  width: 100%;
  height: 500rpx;
  border-radius: 26rpx;
}