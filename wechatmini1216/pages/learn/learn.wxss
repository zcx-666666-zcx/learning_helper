#UP{
  width: 750rpx;
  height: 200rpx;
  background-color: rgb(106, 151, 103);
  text-align: center;
  line-height: 300rpx;
  font-size: 35rpx;
}

.container1{
  width: 750rpx;
  height: 795rpx;
  display: flex;
  flex-direction: column;  
  align-items: center;     
  justify-content: flex-start; 
  background: linear-gradient(180deg, #f8f6f2 0%, #f3e7da 100%);
  padding-top: 40rpx;
}
#learn_button{
  margin: 50rpx;
  width: 525rpx;
  height: 525rpx;
  border: 20rpx solid #4a027a;
  border-radius: 50%;
  display: flex;
  flex-direction: column;  
  justify-content: center;
  align-items: center;
  font-size: 75rpx;
  font-weight: 1000;
  background: white;
  color: #4a027a;
  box-shadow: 
    0 8rpx 24rpx rgba(74, 2, 122, 0.2),
    inset 0 4rpx 12rpx rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

#learn_button::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  background: linear-gradient(45deg, transparent 30%, rgba(74, 2, 122, 0.1) 50%, transparent 70%);
  animation: shine 3s infinite linear;
}

@keyframes shine {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

#learn_button:active{
  transform: scale(0.98);
  box-shadow: 
    0 4rpx 12rpx rgba(74, 2, 122, 0.3),
    inset 0 2rpx 6rpx rgba(255, 255, 255, 0.9);
}

#learn_time{
  width: 550rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;  
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  font-weight: 1000;
  color: #4a027a;
  background: white;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 2, 122, 0.15);
  margin-top: 20rpx;
}

