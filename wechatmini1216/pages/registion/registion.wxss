/* pages/registion/registion.wxss */
#UP{
  width: 750rpx;
  height: 200rpx;
  background-color: rgb(106, 151, 103);
  text-align: center;
  line-height: 300rpx;
  font-size: 35rpx;
}

.user{
  width: 750rpx;
  height: auto;
  min-height: 1200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 40rpx 0;
}

#user_reg{
  width: 500rpx;
  height: 200rpx;
  margin: 40rpx 125rpx 20rpx 125rpx;
  font-size: 65rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2c3e50;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

#user_name, #user_password, #user_surepassword, #user_province, #user_city, #user_age{
  width: 500rpx;
  height: 100rpx;
  margin: 10rpx 125rpx 0rpx 125rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 25rpx;
  padding: 0 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

#user_name:focus-within, #user_password:focus-within, #user_surepassword:focus-within,
#user_province:focus-within, #user_city:focus-within, #user_age:focus-within {
  border-color: rgb(106, 151, 103);
  box-shadow: 0 8rpx 25rpx rgba(106, 151, 103, 0.2);
}

#failed{
  width: 500rpx;
  height: 50rpx;
  margin: 10rpx 125rpx 0rpx 125rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #e74c3c;
  font-weight: 500;
  padding-left: 10rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

#failed.show {
  opacity: 1;
}

#regist{
  width: 500rpx;
  height: 100rpx;
  margin: 40rpx 125rpx 30rpx 125rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  align-items: center;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 60rpx;
  color: white;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(240, 147, 251, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

#regist:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 15rpx rgba(240, 147, 251, 0.3);
}

#regist::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

#regist:active::before {
  left: 100%;
}

textarea{
  height: 70rpx;
  font-size: 34rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #2c3e50;
}

textarea::placeholder {
  color: #a0a0a0;
  font-size: 32rpx;
}

.line2{
  width: 500rpx;
  height: 1rpx;
  margin: 5rpx 125rpx;
  background: linear-gradient(90deg, transparent 0%, rgb(70, 70, 70) 50%, transparent 100%);
  display: flex;
  align-items: center;
}

.line1{
  width: 750rpx;
  height: 2rpx;
  background-color: rgb(70, 70, 70);
}



.back{
  width: 750rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 35rpx;
}