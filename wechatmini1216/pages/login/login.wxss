/* pages/login/login.wxss */
#UP{
  width: 750rpx;
  height: 200rpx;
  background: linear-gradient(135deg, rgb(106, 151, 103) 0%, rgb(85, 130, 82) 100%);
  text-align: center;
  line-height: 300rpx;
  font-size: 38rpx;
  color: white;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(106, 151, 103, 0.3);
}

.log{
  width: 750rpx;
  height: 400rpx;
  font-size: 50rpx;
  
}

#welcome{
  width: 750rpx;
  height: 400rpx;
  text-align: center;
  line-height: 400rpx;
  font-size: 52rpx;
  color: #2c3e50;
  font-weight: 700;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.BTN{
  display: flex;
  justify-content: space-around;
  margin-top: 60rpx;
  padding: 0 50rpx;
}

.BTN view{
  width: 280rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  border-radius: 60rpx;
  font-size: 36rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.BTN view::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

.BTN view:active::before {
  left: 100%;
}

#reg{
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

#reg:active{
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

#login{
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

#login:active{
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.BTN navigator{
  color: inherit;
  text-decoration: none;
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}